<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ubc.tartarus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name=".ApplicationData">
        <activity
            android:name="org.ubc.tartarus.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.ubc.tartarus.GameActivity"
            android:label="@string/game_activity_name" 
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name="org.ubc.tartarus.LobbyActivity"
            android:label="@string/lobby_activity_name" 
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name="org.ubc.tartarus.GameOverActivity"
            android:label="@string/game_over_activity_name"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
